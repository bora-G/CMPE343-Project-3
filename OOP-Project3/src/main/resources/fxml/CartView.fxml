                    <Label text="Review and checkout" style="-fx-font-size: 11px; -fx-text-fill: #ccc;" />
                </VBox>
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="closeButton" text="â† Continue Shopping" onAction="#handleClose" styleClass="nav-button" />
            </children>
        </HBox>
    </top>
    
    <!-- Main Content -->
    <center>
        <HBox spacing="20" style="-fx-padding: 20;">
            <!-- Cart Items -->
            <VBox HBox.hgrow="ALWAYS" spacing="15">
                <VBox styleClass="card" spacing="15" VBox.vgrow="ALWAYS">
                    <Label text="Cart Items" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                    
                    <TableView fx:id="cartTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="productNameColumn" prefWidth="250" text="Product" />
                            <TableColumn fx:id="quantityColumn" prefWidth="120" text="Qty (kg)" />
                            <TableColumn fx:id="unitPriceColumn" prefWidth="120" text="Price" />
                            <TableColumn fx:id="subtotalColumn" prefWidth="120" text="Subtotal" />
                            <TableColumn fx:id="removeColumn" prefWidth="100" text="Action" />
                        </columns>
                    </TableView>
                </VBox>
                
                <!-- Delivery Info -->
