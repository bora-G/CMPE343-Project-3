                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="loyaltyDiscountLabel" text="â‚º0.00" style="-fx-text-fill: #067d62;" />
                    </HBox>
                    
                    <Separator />
                    
                    <HBox>
                        <Label text="Total:" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="totalLabel" text="â‚º0.00" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #b12704;" />
                    </HBox>
                    
                    <Label fx:id="errorLabel" textFill="#b12704" visible="false" wrapText="true" />
                    
                    <Button fx:id="checkoutButton" text="Place order" onAction="#handleCheckout" 
                        prefWidth="Infinity" styleClass="button-primary" style="-fx-padding: 14;">
                        <VBox.margin>
                            <Insets top="5" />
                        </VBox.margin>
                    </Button>
                    
                    <HBox alignment="CENTER" spacing="5">
                        <Label text="ðŸ”’ Secure Checkout" style="-fx-font-size: 11px; -fx-text-fill: #565959;" />
                    </HBox>
                    
                    <Label text="Min order: â‚º200.00" style="-fx-font-size: 11px; -fx-text-fill: #565959;" />
                </VBox>
                
                <VBox styleClass="card" spacing="8" alignment="CENTER">
                    <HBox spacing="15" alignment="CENTER">
                        <Label text="ðŸšš Free Delivery" style="-fx-font-size: 11px; -fx-text-fill: #067d62;" />
