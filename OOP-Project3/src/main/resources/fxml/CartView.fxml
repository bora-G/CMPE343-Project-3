<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group17.greengrocer.controller.CartController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #27ae60; -fx-padding: 15;">
         <children>
            <Label text="Shopping Cart" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="closeButton" mnemonicParsing="false" onAction="#handleClose" text="Close" />
         </children>
      </HBox>
   </top>
   <center>
      <VBox spacing="10.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <TableView fx:id="cartTable" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="productNameColumn" prefWidth="200.0" text="Product" />
                  <TableColumn fx:id="quantityColumn" prefWidth="100.0" text="Quantity (kg)" />
                  <TableColumn fx:id="unitPriceColumn" prefWidth="120.0" text="Unit Price" />
                  <TableColumn fx:id="subtotalColumn" prefWidth="120.0" text="Subtotal" />
                  <TableColumn fx:id="removeColumn" prefWidth="80.0" text="Action" />
               </columns>
            </TableView>
            <VBox spacing="5.0" alignment="CENTER_RIGHT">
               <children>
                  <HBox spacing="10.0" alignment="CENTER_RIGHT">
                     <children>
                        <Label text="Subtotal:" />
                        <Label fx:id="subtotalLabel" text="₺0.00" />
                     </children>
                  </HBox>
                  <HBox spacing="10.0" alignment="CENTER_RIGHT">
                     <children>
                        <Label text="VAT (20%):" />
                        <Label fx:id="vatLabel" text="₺0.00" />
                     </children>
                  </HBox>
                  <HBox spacing="10.0" alignment="CENTER_RIGHT">
                     <children>
                        <Label text="Coupon Discount:" />
                        <Label fx:id="couponDiscountLabel" text="₺0.00" />
                     </children>
                  </HBox>
                  <HBox spacing="10.0" alignment="CENTER_RIGHT">
                     <children>
                        <Label text="Loyalty Discount:" />
                        <Label fx:id="loyaltyDiscountLabel" text="₺0.00" />
                     </children>
                  </HBox>
                  <HBox spacing="10.0" alignment="CENTER_RIGHT">
                     <children>
                        <Label text="Total:" style="-fx-font-weight: bold;" />
                        <Label fx:id="totalLabel" text="₺0.00" style="-fx-font-weight: bold; -fx-font-size: 16;">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <HBox spacing="10.0">
               <children>
                  <Label text="Coupon Code (optional):" />
                  <TextField fx:id="couponCodeField" promptText="Enter coupon code" />
                  <Button fx:id="applyCouponButton" mnemonicParsing="false" onAction="#handleApplyCoupon" text="Apply" />
               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <Label text="Delivery Address:" />
                  <TextField fx:id="deliveryAddressField" HBox.hgrow="ALWAYS" promptText="Enter delivery address" />
               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <Label text="Delivery Date &amp; Time:" />
                  <DatePicker fx:id="deliveryDatePicker" />
                  <ComboBox fx:id="deliveryHourComboBox" prefWidth="80.0" promptText="Hour" />
                  <ComboBox fx:id="deliveryMinuteComboBox" prefWidth="80.0" promptText="Minute" />
               </children>
            </HBox>
            <Label fx:id="errorLabel" textFill="#e74c3c" visible="false" />
            <Button fx:id="checkoutButton" mnemonicParsing="false" onAction="#handleCheckout" text="Complete Order" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </center>
</BorderPane>








