                        <Label text="Address" style="-fx-font-size: 13px; -fx-font-weight: bold;" />
                        <TextField fx:id="deliveryAddressField" promptText="Enter delivery address" style="-fx-padding: 12;" />
                    </VBox>
                    
                    <HBox spacing="15">
                        <VBox spacing="8" HBox.hgrow="ALWAYS">
                            <Label text="Date" style="-fx-font-weight: bold;" />
                            <DatePicker fx:id="deliveryDatePicker" maxWidth="Infinity" />
                        </VBox>
                        <VBox spacing="8">
                            <Label text="Time" style="-fx-font-weight: bold;" />
                            <HBox spacing="5">
                                <ComboBox fx:id="deliveryHourComboBox" prefWidth="80" />
                                <Label text=":" style="-fx-font-size: 16px; -fx-padding: 5 0 0 0;" />
                                <ComboBox fx:id="deliveryMinuteComboBox" prefWidth="80" />
                            </HBox>
                        </VBox>
                    </HBox>
                    
                    <Label text="âš ï¸ Delivery must be within 48 hours" style="-fx-font-size: 11px; -fx-text-fill: #c45500;" />
                </VBox>
            </VBox>
            
            <!-- Order Summary -->
            <VBox prefWidth="320" spacing="15">
                <VBox styleClass="card" spacing="12">
                    <Label text="ðŸŽŸï¸ Coupon" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                    <HBox spacing="8">
                        <TextField fx:id="couponCodeField" HBox.hgrow="ALWAYS" promptText="Code" style="-fx-padding: 10;" />
                        <Button fx:id="applyCouponButton" text="Apply" onAction="#handleApplyCoupon" styleClass="button-secondary" />
                    </HBox>
                </VBox>
                
                <VBox styleClass="card" spacing="12">
                    <Label text="Order Summary" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                    
                    <HBox>
                        <Label text="Subtotal:" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="subtotalLabel" text="â‚º0.00" />
                    </HBox>
                    
                    <HBox>
                        <Label text="VAT (20%):" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="vatLabel" text="â‚º0.00" />
                    </HBox>
                    
                    <HBox>
                        <Label text="Coupon:" style="-fx-text-fill: #067d62;" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="couponDiscountLabel" text="â‚º0.00" style="-fx-text-fill: #067d62;" />
                    </HBox>
                    
                    <HBox>
