<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
    fx:controller="com.group17.greengrocer.controller.CarrierController"
    style="-fx-background-color: #eaeded;">
    
    <!-- Header -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="15" styleClass="amazon-header">
            <padding>
                <Insets bottom="12" left="20" right="20" top="12" />
            </padding>
            <children>
                <HBox alignment="CENTER_LEFT" spacing="5">
                    <Label text="ðŸšš" style="-fx-font-size: 28px;" />
                    <VBox>
                        <Label text="GreenGrocer" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" />
                        <Label text="Carrier Portal" style="-fx-font-size: 11px; -fx-text-fill: #ff9900;" />
                    </VBox>
                </HBox>
                
                <Region HBox.hgrow="ALWAYS" />
                
                <HBox spacing="25" alignment="CENTER">
                    <VBox alignment="CENTER" style="-fx-padding: 5 15; -fx-background-color: rgba(255,255,255,0.1); -fx-background-radius: 5;">
                        <Label text="ðŸ“¦" style="-fx-font-size: 18px;" />
                        <Label text="Available" style="-fx-font-size: 10px; -fx-text-fill: #ccc;" />
                    </VBox>
                    <VBox alignment="CENTER" style="-fx-padding: 5 15; -fx-background-color: rgba(6,125,98,0.3); -fx-background-radius: 5;">
                        <Label text="âœ…" style="-fx-font-size: 18px;" />
                        <Label text="Completed" style="-fx-font-size: 10px; -fx-text-fill: #ccc;" />
                    </VBox>
                </HBox>
                
                <Region prefWidth="30" />
                
                <VBox alignment="CENTER_RIGHT">
                    <Label text="Hello, Carrier" style="-fx-font-size: 11px; -fx-text-fill: #ccc;" />
                    <Label fx:id="welcomeLabel" text="Driver Name" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: white;" />
                </VBox>
                
                <Button fx:id="logoutButton" text="Sign Out" onAction="#handleLogout" styleClass="nav-button" style="-fx-text-fill: #febd69;" />
            </children>
        </HBox>
    </top>
    
    <!-- Main Content -->
    <center>
        <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="ðŸ“¦ Available Orders">
                    <content>
                        <VBox spacing="15" style="-fx-padding: 20;">
                            <HBox styleClass="card" alignment="CENTER_LEFT" spacing="15" 
                                style="-fx-background-color: linear-gradient(to right, #232f3e, #37475a); -fx-padding: 20;">
                                <VBox>
                                    <Label text="Available Deliveries" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" />
                                    <Label text="Select orders to start delivering" style="-fx-font-size: 13px; -fx-text-fill: #ccc;" />
                                </VBox>
                                <Region HBox.hgrow="ALWAYS" />
                                <Button fx:id="selectMultipleButton" text="ðŸ“‹ Select Multiple" 
                                    onAction="#handleSelectMultipleOrders" styleClass="button-primary" />
                            </HBox>
                            
                            <TableView fx:id="availableOrdersTable" VBox.vgrow="ALWAYS">
                                <columns>
                                    <TableColumn fx:id="orderIdColumn1" prefWidth="80" text="Order #" />
                                    <TableColumn fx:id="customerNameColumn1" prefWidth="150" text="Customer" />
                                    <TableColumn fx:id="totalCostColumn1" prefWidth="130" text="Total" />
                                    <TableColumn fx:id="deliveryAddressColumn1" prefWidth="220" text="Address" />
                                    <TableColumn fx:id="orderDateColumn1" prefWidth="140" text="Order Date" />
                                    <TableColumn fx:id="requestedDeliveryDateColumn" prefWidth="140" text="Delivery By" />
                                    <TableColumn fx:id="selectColumn" prefWidth="200" text="Actions" />
                                </columns>
                            </TableView>
                        </VBox>
                    </content>
                </Tab>
                
                <Tab text="ðŸš€ My Active Deliveries">
                    <content>
                        <VBox spacing="15" style="-fx-padding: 20;">
                            <HBox styleClass="card" alignment="CENTER_LEFT" spacing="15"
                                style="-fx-background-color: linear-gradient(to right, #00a8e1, #007185); -fx-padding: 20;">
                                <VBox>
                                    <Label text="Active Deliveries" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" />
                                    <Label text="Complete deliveries to earn!" style="-fx-font-size: 13px; -fx-text-fill: rgba(255,255,255,0.8);" />
                                </VBox>
                            </HBox>
                            
                            <TableView fx:id="currentOrdersTable" VBox.vgrow="ALWAYS">
                                <columns>
                                    <TableColumn fx:id="orderIdColumn2" prefWidth="80" text="Order #" />
                                    <TableColumn fx:id="customerNameColumn2" prefWidth="150" text="Customer" />
                                    <TableColumn fx:id="totalCostColumn2" prefWidth="130" text="Amount" />
                                    <TableColumn fx:id="deliveryAddressColumn2" prefWidth="250" text="Address" />
                                    <TableColumn fx:id="orderDateColumn2" prefWidth="140" text="Order Date" />
                                    <TableColumn fx:id="completeColumn" prefWidth="200" text="Actions" />
                                </columns>
                            </TableView>
                        </VBox>
                    </content>
                </Tab>
                
                <Tab text="âœ… Completed">
                    <content>
                        <VBox spacing="15" style="-fx-padding: 20;">
                            <HBox styleClass="card" alignment="CENTER_LEFT" spacing="15"
                                style="-fx-background-color: linear-gradient(to right, #067d62, #0fa573); -fx-padding: 20;">
                                <VBox>
                                    <Label text="Completed Deliveries" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" />
                                    <Label text="Your delivery history" style="-fx-font-size: 13px; -fx-text-fill: rgba(255,255,255,0.8);" />
                                </VBox>
                            </HBox>
                            
                            <TableView fx:id="completedOrdersTable" VBox.vgrow="ALWAYS">
                                <columns>
                                    <TableColumn fx:id="orderIdColumn3" prefWidth="80" text="Order #" />
                                    <TableColumn fx:id="customerNameColumn3" prefWidth="150" text="Customer" />
                                    <TableColumn fx:id="totalCostColumn3" prefWidth="130" text="Total" />
                                    <TableColumn fx:id="deliveryAddressColumn3" prefWidth="250" text="Address" />
                                    <TableColumn fx:id="deliveryDateColumn" prefWidth="150" text="Delivered On" />
                                </columns>
                            </TableView>
                        </VBox>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
    
    <bottom>
        <HBox styleClass="footer" alignment="CENTER">
            <Label text="Â© 2026 Group17 GreenGrocer - Carrier Portal" />
        </HBox>
    </bottom>
</BorderPane>
