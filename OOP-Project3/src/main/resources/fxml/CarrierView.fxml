<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group17.greengrocer.controller.CarrierController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #e67e22; -fx-padding: 15;">
         <children>
            <Label text="Carrier Dashboard" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="welcomeLabel" text="Welcome, Carrier" textFill="WHITE" />
            <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogout" text="Logout" />
         </children>
      </HBox>
   </top>
   <center>
      <TabPane fx:id="mainTabPane">
         <tabs>
            <Tab text="Available Orders">
               <content>
                  <VBox spacing="10.0">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <children>
                        <TableView fx:id="availableOrdersTable" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="orderIdColumn1" prefWidth="80.0" text="Order ID" />
                              <TableColumn fx:id="customerNameColumn1" prefWidth="150.0" text="Customer" />
                              <TableColumn fx:id="totalCostColumn1" prefWidth="120.0" text="Total (with VAT)" />
                              <TableColumn fx:id="deliveryAddressColumn1" prefWidth="200.0" text="Delivery Address" />
                              <TableColumn fx:id="orderDateColumn1" prefWidth="150.0" text="Order Date" />
                              <TableColumn fx:id="requestedDeliveryDateColumn" prefWidth="150.0" text="Requested Delivery" />
                              <TableColumn fx:id="selectColumn" prefWidth="180.0" text="Actions" />
                           </columns>
                        </TableView>
                        <HBox spacing="20.0">
                           <children>
                              <Button fx:id="selectMultipleButton" mnemonicParsing="false" onAction="#handleSelectMultipleOrders" text="Select Multiple" />
                              <Region HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </content>
            </Tab>
            <Tab text="My Current Orders">
               <content>
                  <VBox spacing="10.0">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <children>
                        <TableView fx:id="currentOrdersTable" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="orderIdColumn2" prefWidth="80.0" text="Order ID" />
                              <TableColumn fx:id="customerNameColumn2" prefWidth="150.0" text="Customer" />
                              <TableColumn fx:id="totalCostColumn2" prefWidth="120.0" text="Total Cost" />
                              <TableColumn fx:id="deliveryAddressColumn2" prefWidth="200.0" text="Delivery Address" />
                              <TableColumn fx:id="orderDateColumn2" prefWidth="150.0" text="Order Date" />
                              <TableColumn fx:id="completeColumn" prefWidth="100.0" text="Action" />
                           </columns>
                        </TableView>
                     </children>
                  </VBox>
               </content>
            </Tab>
            <Tab text="Completed Orders">
               <content>
                  <VBox spacing="10.0">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <children>
                        <TableView fx:id="completedOrdersTable" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="orderIdColumn3" prefWidth="80.0" text="Order ID" />
                              <TableColumn fx:id="customerNameColumn3" prefWidth="150.0" text="Customer" />
                              <TableColumn fx:id="totalCostColumn3" prefWidth="120.0" text="Total Cost" />
                              <TableColumn fx:id="deliveryAddressColumn3" prefWidth="200.0" text="Delivery Address" />
                              <TableColumn fx:id="deliveryDateColumn" prefWidth="150.0" text="Delivery Date" />
                           </columns>
                        </TableView>
                     </children>
                  </VBox>
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </center>
</BorderPane>








