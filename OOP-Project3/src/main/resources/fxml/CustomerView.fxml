<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group05.greengrocer.controller.CustomerController">
   <top>
      <!-- Amazon-style Header with Username in Corner -->
      <VBox styleClass="header-nav">
         <children>
            <!-- Main Header Bar -->
            <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-padding: 12 20;">
               <children>
                  <Label text="Group5 GreenGrocer" textFill="WHITE" style="-fx-font-size: 22px; -fx-font-weight: 700;" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="refreshButton" mnemonicParsing="false" onAction="#handleRefresh" text="â†» Refresh" />
                  <Button fx:id="cartButton" mnemonicParsing="false" onAction="#handleViewCart" text="ðŸ›’ Cart" styleClass="button-warning" />
                  <!-- Username Display in Top-Right Corner -->
                  <VBox alignment="TOP_RIGHT" spacing="2" style="-fx-padding: 0 10 0 10;">
                     <children>
                        <Label text="Hello," textFill="#CCCCCC" style="-fx-font-size: 12px;" />
                        <Label fx:id="usernameLabel" textFill="WHITE" style="-fx-font-weight: 700; -fx-font-size: 14px;" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <!-- Secondary Navigation Bar -->
            <HBox alignment="CENTER_LEFT" spacing="12.0" styleClass="header-sub-nav">
               <children>
                  <Label fx:id="welcomeLabel" text="Welcome, Customer" textFill="WHITE" style="-fx-font-weight: 600;" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="profileButton" mnemonicParsing="false" onAction="#handleEditProfile" text="Edit Profile" />
                  <Button fx:id="orderHistoryButton" mnemonicParsing="false" onAction="#handleViewOrderHistory" text="My Orders" />
                  <Button fx:id="messageOwnerButton" mnemonicParsing="false" onAction="#handleMessageOwner" text="Message Owner" />
                  <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogout" text="Logout" />
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <VBox spacing="15.0" style="-fx-background-color: #EAEDED;">
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
         <children>
            <!-- Search and Sort Bar - Amazon Style -->
            <HBox spacing="12.0" alignment="CENTER_LEFT" styleClass="bg-white rounded shadow" style="-fx-padding: 12;">
               <children>
                  <TextField fx:id="searchField" promptText="Search vegetables, fruits, herbs..." HBox.hgrow="ALWAYS" style="-fx-pref-height: 38px; -fx-font-size: 14px;" />
                  <Label text="Sort by:" style="-fx-font-weight: 600;" />
                  <ComboBox fx:id="sortComboBox" prefWidth="180.0" />
                  <Button fx:id="searchButton" mnemonicParsing="false" onAction="#handleSearch" text="ðŸ” Search" styleClass="button-primary" />
               </children>
            </HBox>
            
            <!-- Products Container with Amazon-style Product Cards -->
            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent; -fx-border-color: transparent;">
               <content>
                  <VBox fx:id="productsContainer" spacing="15.0" styleClass="spacing-medium">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </content>
            </ScrollPane>
         </children>
      </VBox>
   </center>
</BorderPane>
