<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group17.greengrocer.controller.CustomerController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #3498db; -fx-padding: 15;">
         <children>
            <Label text="Customer Dashboard" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="usernameLabel" textFill="WHITE" />
            <Label fx:id="welcomeLabel" text="Welcome, Customer" textFill="WHITE" />
            <Button fx:id="profileButton" mnemonicParsing="false" onAction="#handleEditProfile" text="Edit Profile" />
            <Button fx:id="orderHistoryButton" mnemonicParsing="false" onAction="#handleViewOrderHistory" text="My Orders" />
            <Button fx:id="messageOwnerButton" mnemonicParsing="false" onAction="#handleMessageOwner" text="Message Owner" />
            <Button fx:id="refreshButton" mnemonicParsing="false" onAction="#handleRefresh" text="Refresh" />
            <Button fx:id="cartButton" mnemonicParsing="false" onAction="#handleViewCart" text="View Cart" />
            <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogout" text="Logout" />
         </children>
      </HBox>
   </top>
   <center>
      <VBox spacing="10.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <HBox spacing="10.0">
               <children>
                  <TextField fx:id="searchField" promptText="Search products..." HBox.hgrow="ALWAYS" />
                  <Label text="Sort by:" />
                  <ComboBox fx:id="sortComboBox" prefWidth="150.0" />
                  <Button fx:id="searchButton" mnemonicParsing="false" onAction="#handleSearch" text="Search" />
               </children>
            </HBox>
            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
               <content>
                  <VBox fx:id="productsContainer" spacing="10.0">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </content>
            </ScrollPane>
         </children>
      </VBox>
   </center>
</BorderPane>








