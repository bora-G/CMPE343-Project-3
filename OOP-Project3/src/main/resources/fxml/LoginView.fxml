<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
    fx:controller="com.group17.greengrocer.controller.LoginController"
    style="-fx-background-color: linear-gradient(to bottom, #232f3e 0%, #232f3e 30%, #eaeded 30%, #eaeded 100%);">
    
    <center>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets bottom="50" left="20" right="20" top="50" />
            </padding>
            
            <!-- Logo -->
            <VBox alignment="CENTER" spacing="5">
                <Label text="ðŸ¥¬" style="-fx-font-size: 48px;" />
                <HBox alignment="CENTER" spacing="0">
                    <Label text="Group17" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;" />
                    <Label text=" GreenGrocer" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #ff9900;" />
                </HBox>
                <Label text="Fresh produce, delivered to your door" style="-fx-font-size: 14px; -fx-text-fill: #ccc;" />
            </VBox>
            
            <!-- Login Card -->
            <VBox styleClass="login-card" spacing="15" maxWidth="380" minWidth="350">
                <padding>
                    <Insets bottom="25" left="25" right="25" top="25" />
                </padding>
                
                <Label text="Sign in" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0f1111;" />
                
                <VBox spacing="5">
                    <Label text="Username" style="-fx-font-size: 13px; -fx-font-weight: bold;" />
                    <TextField fx:id="usernameField" promptText="Enter your username" style="-fx-padding: 10;" />
                </VBox>
                
                <VBox spacing="5">
                    <Label text="Password" style="-fx-font-size: 13px; -fx-font-weight: bold;" />
                    <PasswordField fx:id="passwordField" promptText="Enter your password" style="-fx-padding: 10;" />
                </VBox>
                
                <Label fx:id="errorLabel" textFill="#b12704" visible="false" wrapText="true" />
                
                <Button fx:id="loginButton" text="Sign in" onAction="#handleLogin" 
                    prefWidth="Infinity" styleClass="button-primary" style="-fx-padding: 12;" />
                
                <HBox alignment="CENTER" spacing="10">
                    <Separator HBox.hgrow="ALWAYS" />
                    <Label text="New to GreenGrocer?" style="-fx-font-size: 12px; -fx-text-fill: #767676;" />
                    <Separator HBox.hgrow="ALWAYS" />
                </HBox>
                
                <Button fx:id="registerButton" text="Create your account" 
                    onAction="#handleRegister" prefWidth="Infinity" styleClass="button-secondary" style="-fx-padding: 10;" />
            </VBox>
            
            <Label text="Â© 2026 Group17 GreenGrocer - CMPE343 Project" style="-fx-font-size: 11px; -fx-text-fill: #565959;" />
        </VBox>
    </center>
</BorderPane>
